         <TableColumn prefWidth="127.0" text="Link GitHub" />
        </columns>
    </TableView>
    <TextField fx:id="emailField" layoutX="334.0" layoutY="370.0" promptText="Email" style="-fx-border-color: #004aad;" />
    <TextField fx:id="grupoField" layoutX="522.0" layoutY="370.0" promptText="Grupo" style="-fx-border-color: #004aad;" />
    
          <!-- Campos para adicionar um novo aluno -->
    <TextField fx:id="nomeField" layoutX="146.0" layoutY="370.0" promptText="Nome" style="-fx-border-color: #004aad;" />
    <Button layoutX="706.0" layoutY="370.0" onAction="#handleAddAluno" style="-fx-background-color: #004aad;" text="Adicionar Aluno" textFill="WHITE">
