            <HBox spacing="10" />
        </VBox>

        <HBox layoutX="14.0" layoutY="210.0" spacing="10" />
         <Button layoutX="14.0" layoutY="167.0" onAction="#salvarCriterio" style="-fx-background-color: #004aad; -fx-text-fill: white;" text="Salvar" />
