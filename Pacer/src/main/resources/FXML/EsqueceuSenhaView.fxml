<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<Pane fx:id="pnlEsqueceuSenha" prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pacer.login.EsqueceuSenhaController">
    <children>
        <!-- Fundo para destaque -->
        <Rectangle arcHeight="20" arcWidth="20" fill="#ffffff" height="302.0" layoutX="-4.0" layoutY="-2.0" stroke="#d3d3d3" strokeWidth="1.5" width="410.0" />

        <!-- Título -->
        <Label layoutX="83.0" layoutY="41.0" text="Esqueceu a Senha" textFill="#004aad">
            <font>
                <Font name="Arial Black" size="20.0" />
            </font>
        </Label>

        <!-- Subtítulo -->
        <Label layoutX="70.0" layoutY="79.0" text="Digite seu RA para recuperar sua conta:" textFill="#555555">
            <font>
                <Font name="Arial" size="14.0" />
            </font>
        </Label>

        <!-- Campo de texto para o RA -->
        <TextField fx:id="txtRA" layoutX="70" layoutY="120" prefWidth="260.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc;" />

        <!-- Botão Enviar -->
        <Button fx:id="btnEnviar" layoutX="150.0" layoutY="170.0" onAction="#handleEnviarRA" style="-fx-background-color: #004aad; -fx-background-radius: 10;" text="Enviar" textFill="WHITE">
            <font>
                <Font name="Arial Black" size="14.0" />
            </font>
        </Button>
      <Button alignment="CENTER" contentDisplay="CENTER" layoutY="-3.0" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#handleVoltar" prefHeight="25.0" prefWidth="53.0" style="-fx-background-color: #004aad;" text="Voltar" textFill="WHITE">
         <font>
            <Font name="Arial Black" size="10.0" />
         </font>
      </Button>
    </children>
</Pane>
