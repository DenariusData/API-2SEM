<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="340.0" prefWidth="482.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pacer.login.RedefinirSenhaController">
   <children>
       <!-- Botão de confirmação -->
       <Button fx:id="btnConfirmar" layoutX="191.0" layoutY="284.0" onAction="#handleConfirmarSenha" style="-fx-background-color: #004aad; -fx-background-radius: 10; -fx-padding: 10 20;" text="Confirmar" textFill="WHITE">
           <font>
               <Font name="Arial Black" size="14.0" />
           </font>
       </Button>

       <!-- Mensagem de instrução -->
       <Label fx:id="lblMensagem" alignment="CENTER" layoutX="69.0" layoutY="249.0" text="A senha deve ter pelo menos 8 caracteres e incluir números e letras." />

       <!-- Subtítulo com instrução -->
       <Label alignment="CENTER" layoutX="129.0" layoutY="87.0" text="Digite sua nova senha e confirme-a:" textFill="#555555">
           <font>
               <Font name="Arial" size="14.0" />
           </font>
       </Label>

       <!-- Campo para confirmação da senha -->
       <PasswordField fx:id="txtConfirmarSenha" layoutX="66.0" layoutY="200.0" prefHeight="29.0" prefWidth="360.0" promptText="Confirme sua senha" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc; -fx-padding: 5;" />

       <!-- Campo para a nova senha -->
       <PasswordField fx:id="txtNovaSenha" layoutX="63.0" layoutY="156.0" prefHeight="29.0" prefWidth="366.0" promptText="Nova senha" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc; -fx-padding: 5;" />

       <!-- Título -->
       <Label alignment="CENTER" layoutX="137.0" layoutY="43.0" text="Redefinir Senha" textFill="#004aad">
           <font>
               <Font name="Arial Black" size="24.0" />
           </font>
       </Label>
      <ToggleButton fx:id="togglePasswordVisibilityButton" layoutX="366.0" layoutY="143.0" mnemonicParsing="false" onAction="#togglePasswordVisibility" style="-fx-background-color: transparent;" text="👁">
         <font>
            <Font size="26.0" />
         </font>
      </ToggleButton>
      <ToggleButton fx:id="togglePasswordVisibilityButton2" layoutX="366.0" layoutY="187.0" mnemonicParsing="false" onAction="#togglePasswordVisibility2" style="-fx-background-color: transparent;" text="👁">
         <font>
            <Font size="26.0" />
         </font>
      </ToggleButton>
   </children>
</AnchorPane>
