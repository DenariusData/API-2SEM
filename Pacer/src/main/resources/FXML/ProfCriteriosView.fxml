<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="582.0" prefWidth="811.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pacer.professor.ProfCriteriosController">

    <!-- Título -->
    <top>
        <Label alignment="CENTER" prefHeight="24.0" prefWidth="822.0" style="-fx-background-color: #004AAD;" text="Administração de Critérios" textAlignment="RIGHT" textFill="WHITE">
         <font>
            <Font name="Arial Black" size="15.0" />
         </font></Label>
    </top>

    <!-- Filtro e Busca -->
    <center>
        <VBox prefHeight="417.0" prefWidth="484.0" spacing="10">
            <HBox spacing="10" />

            <!-- Tabela de Critérios -->
            <TableView fx:id="tableView" prefHeight="410.0" prefWidth="484.0" onMouseClicked="#handleRowClick">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="63.0" text="ID" />
                    <TableColumn fx:id="nomeColumn" prefWidth="324.0" text="Nome do Critério" />
                    <TableColumn fx:id="descricaoColumn" prefWidth="288.0" text="Descrição" />
                    <TableColumn fx:id="ativoColumn" prefWidth="134.0" text="Ativo" />
                </columns>
            </TableView>
            
        </VBox>
    </center>

    <!-- Formulário de Edição -->
    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" prefHeight="53.0" prefWidth="484.0" spacing="10">
                <Label text="ID:" />
                <TextField fx:id="idField" editable="false" />
                <Label text="Nome:" />
                <TextField fx:id="nomeField" />
                <Label text="Descrição:" />
                <TextField fx:id="descricaoField" alignment="CENTER" />
                <Label text="Ativo:" />
                <CheckBox fx:id="ativoField" mnemonicParsing="false" />
            </HBox>

            <HBox spacing="10" />

            <HBox spacing="10" />

            <!-- Botões de Ação -->
            <HBox alignment="CENTER" prefHeight="29.0" prefWidth="484.0" spacing="10">
                <Button style="-fx-background-color: #1E90FF;" text="Adicionar" textFill="WHITE" onAction="#adicionarCriterio"/>
                <Button style="-fx-background-color: #4682B4;" text="Editar" textFill="WHITE" onAction="#editarCriterio"/>
                <Button style="-fx-background-color: #B22222;" text="Deletar" textFill="WHITE" onAction="#deletarCriterio">
                   <font>
                      <Font name="Arial Black" size="11.0" />
                   </font>
                </Button>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>